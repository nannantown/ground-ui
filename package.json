{
  "name": "@nannantown/ground-ui",
  "version": "0.5.4",
  "description": "GroundUI - A minimal, dark-first React design system",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./src/css/tokens.css",
    "./tokens": {
      "import": "./dist/tokens/index.js",
      "types": "./dist/tokens/index.d.ts"
    },
    "./tokens/css": "./out/css/tokens.generated.css",
    "./tokens/flutter": "./out/flutter/ground_tokens.dart",
    "./theme": {
      "import": "./dist/theme/index.js",
      "types": "./dist/theme/index.d.ts"
    },
    "./interactions": {
      "import": "./dist/interactions/index.js",
      "types": "./dist/interactions/index.d.ts"
    },
    "./eslint": {
      "import": "./dist/eslint/index.js",
      "types": "./dist/eslint/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src/css",
    "out"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "catalog": "vite dev catalog --port 6100",
    "catalog:build": "vite build catalog",
    "catalog:deploy": "npm run catalog:build && npx wrangler pages deploy catalog/dist --project-name=ground-ui --commit-dirty=true",
    "generate-tokens": "tsx scripts/generate-tokens.ts --ts --dart --css",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run generate-tokens && npm run build && npm run typecheck"
  },
  "peerDependencies": {
    "next-themes": ">=0.4.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "next-themes": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^10.0.1",
    "jsdom": "^28.1.0",
    "next-themes": "^0.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "react",
    "design-system",
    "ui",
    "components",
    "dark-theme",
    "design-tokens"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nannantown/ground-ui"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
