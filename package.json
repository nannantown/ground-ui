{
  "name": "@ground/ui",
  "version": "0.1.0",
  "description": "GroundUI - A minimal, dark-first React design system",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./src/css/tokens.css",
    "./tokens": {
      "import": "./dist/tokens/index.js",
      "types": "./dist/tokens/index.d.ts"
    },
    "./theme": {
      "import": "./dist/theme/index.js",
      "types": "./dist/theme/index.d.ts"
    },
    "./interactions": {
      "import": "./dist/interactions/index.js",
      "types": "./dist/interactions/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "catalog": "vite dev catalog --port 6100",
    "catalog:build": "vite build catalog",
    "generate-tokens": "tsx scripts/generate-tokens.ts --ts --dart --css"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "next-themes": ">=0.4.0"
  },
  "peerDependenciesMeta": {
    "next-themes": { "optional": true }
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "next-themes": "^0.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "keywords": [
    "react",
    "design-system",
    "ui",
    "components",
    "dark-theme",
    "design-tokens"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nannantown/ground-ui"
  }
}
