{
  "$schema": "https://ground-ui.dev/tokens.schema.json",
  "primitive": {
    "gray": {
      "950": "#0a0a0a",
      "900": "#111111",
      "850": "#141414",
      "800": "#1a1a1a",
      "700": "#333333",
      "600": "#666666",
      "500": "#888888",
      "450": "#949494",
      "400": "#a0a0a0",
      "300": "#cccccc",
      "200": "#e0e0e0",
      "150": "#ededed",
      "100": "#f0f0f0",
      "50": "#fafafa"
    },
    "whiteAlpha": {
      "2": "rgba(255, 255, 255, 0.02)",
      "3": "rgba(255, 255, 255, 0.03)",
      "5": "rgba(255, 255, 255, 0.05)",
      "6": "rgba(255, 255, 255, 0.06)",
      "8": "rgba(255, 255, 255, 0.08)",
      "10": "rgba(255, 255, 255, 0.10)",
      "12": "rgba(255, 255, 255, 0.12)",
      "15": "rgba(255, 255, 255, 0.15)",
      "20": "rgba(255, 255, 255, 0.20)",
      "25": "rgba(255, 255, 255, 0.25)",
      "30": "rgba(255, 255, 255, 0.30)",
      "35": "rgba(255, 255, 255, 0.35)",
      "50": "rgba(255, 255, 255, 0.50)",
      "70": "rgba(255, 255, 255, 0.70)"
    },
    "blackAlpha": {
      "40": "rgba(0, 0, 0, 0.40)",
      "60": "rgba(0, 0, 0, 0.60)",
      "70": "rgba(0, 0, 0, 0.70)",
      "80": "rgba(0, 0, 0, 0.80)"
    },
    "green": { "400": "#6ABEA5", "500": "#43A386", "600": "#35886F" },
    "emerald": { "500": "#10b981" },
    "amber": { "400": "#DDC16E", "500": "#C7A338", "600": "#A98928" },
    "red": { "400": "#DF969D", "500": "#D06C76", "600": "#B04F59" },
    "blue": { "400": "#879ED4", "500": "#5C7BC1", "600": "#4560A1" },
    "sky": { "400": "#38bdf8", "500": "#0ea5e9", "600": "#0284c7" },
    "slate": { "500": "#64748b", "600": "#475569" }
  },
  "semantic": {
    "bg": {
      "primary": { "$ref": "primitive.gray.950" },
      "secondary": { "$ref": "primitive.gray.900" },
      "card": { "$ref": "primitive.gray.850" },
      "elevated": { "$ref": "primitive.gray.800" }
    },
    "text": {
      "primary": { "$ref": "primitive.gray.150" },
      "secondary": { "$ref": "primitive.gray.400" },
      "disabled": { "$ref": "primitive.gray.600" },
      "inverse": "#000000"
    },
    "border": {
      "subtle": { "$ref": "primitive.whiteAlpha.12" },
      "default": { "$ref": "primitive.whiteAlpha.20" },
      "strong": { "$ref": "primitive.whiteAlpha.35" }
    },
    "success": { "default": { "$ref": "primitive.green.500" }, "hover": { "$ref": "primitive.green.600" }, "light": { "$ref": "primitive.green.400" } },
    "warning": { "default": { "$ref": "primitive.amber.500" }, "hover": { "$ref": "primitive.amber.600" }, "light": { "$ref": "primitive.amber.400" } },
    "error":   { "default": { "$ref": "primitive.red.500" },   "hover": { "$ref": "primitive.red.600" },   "light": { "$ref": "primitive.red.400" } },
    "info":    { "default": { "$ref": "primitive.blue.500" },  "hover": { "$ref": "primitive.blue.600" },  "light": { "$ref": "primitive.blue.400" } },
    "accent":  { "default": { "$ref": "primitive.sky.500" },   "hover": { "$ref": "primitive.sky.600" },   "light": { "$ref": "primitive.sky.400" } }
  },
  "spacing": {
    "2xs": "2px",
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "24px",
    "2xl": "32px",
    "3xl": "48px",
    "4xl": "64px"
  },
  "radius": {
    "none": "0px",
    "xs": "2px",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "full": "9999px"
  },
  "typography": {
    "fontFamily": {
      "sans": "'Ground Sans', 'Hiragino Sans', 'Hiragino Kaku Gothic Pro', -apple-system, BlinkMacSystemFont, sans-serif",
      "mono": "'SF Mono', 'Fira Code', monospace"
    },
    "fontSize": {
      "xs": "12px",
      "sm": "13px",
      "base": "14px",
      "md": "15px",
      "lg": "18px",
      "xl": "22px",
      "2xl": "28px",
      "3xl": "36px"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "letterSpacing": {
      "tight": "0.02em",
      "normal": "0.04em",
      "wide": "0.1em"
    },
    "bilingualSizeAdjust": {
      "latin": "108%",
      "cjk": "100%"
    }
  },
  "transition": {
    "fast": "150ms ease",
    "base": "200ms ease",
    "slow": "300ms ease"
  },
  "zIndex": {
    "base": 0,
    "dropdown": 100,
    "sticky": 200,
    "overlay": 9998,
    "modal": 9999,
    "toast": 10000
  }
}
